#include<stdio.h>
int main()
{
int i=0;
int j=0;
int sum=0;
int ret =1;
int m;
printf("Please inport the number");
scanf("%d",&m);
for(i=1;i<=m;i++)
{
  ret =1;
  for(j=1;j<=i;j++)
  {
  ret=ret*j;
  }
  sum = sum+ret;

}
printf("sum = %d\n",sum);
return 0;
}
//Sum of factorials-阶乘的和运算


#include<stdio.h>
  int main()
{
  int i;
   int n;
  printf("Please inport the number you want");
  scanf("%d",&n);
  int ret=1;
  for(i=1;i<=n;i++)
  {
  ret = ret*i;
  }
printf("%d ",ret);
}
//The factorials -阶乘的计算
