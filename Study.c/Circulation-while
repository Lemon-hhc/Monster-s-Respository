1.
#include<stdio.h>
#include<string.h>
int main()
{
    char arr1[] = "welcome to SUSE!!!!!";
    char arr2[] = "********************";
    int left =0;
    int right =strlen(arr1)-1;

    while (left<=right)
    {
        arr2[left] =arr1[left];
        arr2[right]=arr1[right];
        printf("%s\n",arr2);
        left++;
        right--;
    }
    return 0;
}
2.
#include<stdio.h>
#include<string.h>
#include<windows.h>//System header file
int main()
{
    char arr1[] = "welcome to SUSE!!!!!";
    char arr2[] = "********************";
    int left =0;
    int right =strlen(arr1)-1;

    while (left<=right)
    {
        arr2[left] =arr1[left];
        arr2[right]=arr1[right];
        printf("%s\n",arr2);
        Sleep(1000);
        system("cls");  // System commend
        left++;
        right--;
    }
    return 0;
}
3.
#include<stdio.h>
int main()
{
    int m =22;
    int n = 3;
    int r = 0;
    printf("Please inport the numbers\n");//Find the greatest common divisor of two numbers
    scanf("%d%d",&m,&n);
    while (r=m%n)
    {
        m=n;
        n=r;
    }
    printf("%d",n);
    
}
